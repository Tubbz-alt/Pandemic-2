<!--relative layout, have table be second child
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="fill_parent"
android:layout_width="fill_parent">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dip"
        android:layout_gravity="top" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/root"
        android:stretchColumns="*"
        android:background="#000000">
        <TableRow android:layout_margin="0dip" android:paddingBottom="1dp"
            android:id="@+id/first_level">
            <Button android:id="@+id/button01"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:padding="15dip"
                android:textColor=""
                android:text="Coughing" />
            <Button android:id="@+id/button02"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:padding="15dip"
                android:text="Sneezing" />
            <Button android:id="@+id/button03"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:padding="15dip"
                android:text="Sweating"/>
        </TableRow>
        <TableRow android:layout_margin="0dip" android:paddingBottom="1dp"
            android:id="@+id/second_level">
            <Button android:id="@+id/button04"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:padding="15dip"
                android:text="Chills"/>
            <Button android:id="@+id/button05"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:padding="15dip"
                android:text="Fatigue"/>
            <Button android:id="@+id/button06"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:padding="15dip"
                android:text="Nausea"/>
        </TableRow>
        <TableRow android:layout_margin="0dip" android:paddingBottom="1dp"
            android:id="@+id/third_level">
            <Button android:id="@+id/button07"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:padding="15dip"
                android:text="Vomit"/>
            <Button android:id="@+id/button08"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:padding="15dip"
                android:text="Diarrhea"/>
            <Button android:id="@+id/button09"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:padding="15dip"
                android:text="Fever"/>
        </TableRow><TableRow android:layout_margin="0dip" android:paddingBottom="1dp"
        android:id="@+id/fourth_level">
        <Button android:id="@+id/button10"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:padding="15dip"
            android:text="Coughing" />
        <Button android:id="@+id/button11"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:padding="15dip"
            android:text="Sneezing" />
        <Button android:id="@+id/button12"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:padding="15dip"
            android:text="Sweating"/>
    </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/bottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dip"
        android:layout_gravity="bottom" />
</RelativeLayout>
</RelativeLayout>